<style>
    form {
        width: 340px;
        margin: 20px auto;
        font-family: Arial, sans-serif;
    }

    div {
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 10px 0;
    }

    label {
        width: 40%;
        text-align: right;
        margin-right: 10px;
    }

    input[type="text"],
    select {
        width: 55%;
        height: 25px;
        padding: 5px;
        border-radius: 3px;
        border: 1px solid #ccc;
    }

    #btn {
        width: 100%;
        margin-top: 15px;
        padding: 8px;
        border: none;
        border-radius: 3px;
        background-color: #007bff;
        color: white;
        cursor: pointer;
    }

    #btn:hover {
        background-color: #0056b3;
    }
</style>


<h1>Reservation</h1>
    <form method="post" >
        <div>
            <label for="reservDate">Reservation Date:</label>
            <input type="text" name="reservDate" placeholder="Reservation Date" id="reservDate" required> 
        </div>
        <div>
            <label for="departmentId">Department:</label>
            <select name="departmentId" id="departmentId">
            {{#each departments}}
                <option value="{{department_id}}">{{department_id}} - {{department_name}}</option>
            {{/each}}
            </select>
        </div>
        <input type="submit" formaction="/enter/edit/insert/doctor" id="btn">
    </form>