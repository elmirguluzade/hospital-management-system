<style>
    /* General styles */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    h2 {
        text-align: center;
        margin-top: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    table, th, td {
        border: 1px solid black;
    }

    th, td {
        padding: 8px;
        text-align: left;
    }

    form {
        margin-top: 10px;
        text-align: center;
    }

    input[type="text"],
    input[type="submit"] {
        padding: 5px;
        margin: 5px;
        border-radius: 3px;
        border: 1px solid #ccc;
    }

    input[type="submit"] {
        cursor: pointer;
        background-color: #007bff;
        color: white;
        border: none;
    }

    input[type="submit"]:hover {
        background-color: #0056b3;
    }

    #logout {
        position: absolute;
        top: 10px;
        right: 20px;
    }

    /* Search table style */
    #searchTable {
        margin-top: 20px;
        width: 100%;
    }

    #searchTable td {
        padding: 8px;
    }
</style>


<!--Examination-->
<h2>{{title1}}</h2>

<table>
    <tr>
        <td>Examination Details</td>
        <td>Examination Date</td>
        <td>Doctor</td>
        <td>Patient</td>
    </tr>
    {{#each Examination}}
    <form method="post">
    <tr>
        <td><input type="text" name="details" value="{{examination_details}}"></td> 
        <td><input type="text" name="date" value="{{examination_date}}"></td> 
        <td style="display: none;"><input type="text" name="oldDate" value="{{examination_date}}"></td> 
        <td>{{doctor_id}}</td> 
        <td>{{patient_id}}</td>
        <td><input type="submit" value="Modify" formaction="/enter/edit/modify/doctor"></td>
        <td><input type="submit" value="Delete" formaction="/enter/edit/delete/{{examination_date}}/doctor"></td>
    </tr>
    </form>
    {{/each}}
</table>

<form method="get" id="add">
    <input type="submit" value="Add examination" formaction="/enter/edit/insert/doctor">
</form>

<form method="post" id="search">
    <input type="text" placeholder="Patient Name" name="name">
    <input type="submit" value="Search" formaction="/enter/edit/search/examination">
</form>

{{#each patient}}
<table border="1" id="searchTable">
   <tr>
    <td>Patient Id</td>
    <td>Name</td> 
    <td>Social Secuirty Number</td> 
    <td>Gender</td> 
    <td>Address</td>
    <td>Blood Type</td>
    <td>Height</td>
    <td>Weight</td>
    <td>Phone Number</td>
    <td>Password</td>
    </tr>
    <tr>
    <td>{{patient_id}}</td>
    <td>{{name}}</td> 
    <td>{{social_security_number}}</td> 
    <td>{{gender}}</td> 
    <td>{{address}}</td>
    <td>{{blood_type}}</td>
    <td>{{height}}</td>
    <td>{{weight}}</td>
    <td>{{phone_number}}</td>
    <td>{{password}}</td>
    </tr>
</table>
{{/each}}


<form id="logout" method="get" action='/logout'>
        <button class='btn' type="submit">Logout</button>
</form>